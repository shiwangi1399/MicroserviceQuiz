        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "DemoApplication",
            "request": "launch",
            "mainClass": "com.example.demo.DemoApplication",
            "projectName": "demo"
        },
        {
            "type": "java",
            "name": "Run Instance on Port 8081",
            "request": "launch",
            "mainClass": "com.example.demo.DemoApplication",  // Replace with your main class
            "args": ["--server.port=8081"],
            "projectName": "demo"     // Replace with your project name
          }
    ]
